<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_tv_ClsName"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/dialog_message_clsName"
        android:elevation="3dp"
        android:gravity="center"
        android:text="课程名称"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:targetApi="lollipop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:id="@+id/dialog_tv_clsSite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="教室"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dialog_tv_clsNumber"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="节数"
            android:textSize="15sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/dialog_table_weeks"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/dialog_tv_setting"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/dialog_message_setting"
        android:gravity="center"
        android:text="编辑"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>